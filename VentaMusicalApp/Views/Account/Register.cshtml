@model VentaMusicalApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar";
}
<link rel="stylesheet" href="~/Content/css/register.css" />


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Registrar un nuevo usuario</h4>
    <hr />
    <div class="login-container">
        <div class="login-section">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.NumeroIdentificacion, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.NumeroIdentificacion, new { @class = "input-data-form ", @id = "numeroIdentificacion" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PrimerNombre, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PrimerNombre, new { @class = "input-data-form " })
                </div>
            </div><div class="form-group">
                @Html.LabelFor(m => m.SegundoNombre, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.SegundoNombre, new { @class = "input-data-form " })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PrimerApellido, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PrimerApellido, new { @class = "input-data-form " })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SegundoApellido, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.SegundoApellido, new { @class = "input-data-form " })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.Genero, new { @class = "label-form" })
                <div class="col-md-10">
                    @Html.DropDownList(
                        "Genero",
                        (List<SelectListItem>)ViewBag.Generos,
                        "Elige un género",
                        new { @class = "select-input-form" })
                    @Html.ValidationMessageFor(u => u.Genero)
                </div>
            </div>
        </div>
        <div class="login-section">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input-data-form " })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.IdTipoTarjeta, new { @class = "label-form" })
                <div class="col-md-10">
                    @Html.DropDownList(
                       "IdTipoTarjeta",
                       (List<SelectListItem>)ViewBag.TipoTarjeta,
                       "Elige un tipo de tarjeta",
                       new { @class = "select-input-form" })
                    @Html.ValidationMessageFor(u => u.IdTipoTarjeta)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NumeroTarjeta, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.NumeroTarjeta, new { @class = "input-data-form ", @id = "numeroTarjeta" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "input-data-form " })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 label-form" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-data-form " })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="button" value="Registrar" />
                </div>
            </div>
        </div>
        <div class="login-section">
            <img src="~/Content/images/register.svg" />
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        $("#numeroTarjeta").inputmask({ "mask": "9999 9999 9999 9999" });
        $("#numeroIdentificacion").inputmask({ "mask": "9 9999 9999" });


    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
